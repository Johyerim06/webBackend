{
  "info": {
    "name": "Club Scheduler API",
    "description": "동아리 일정 관리 API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/health",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "health"]
            }
          }
        },
        {
          "name": "회원가입",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "email",
                  "value": "test@example.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "password123",
                  "type": "text"
                },
                {
                  "key": "name",
                  "value": "테스트유저",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "로그인",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "email",
                  "value": "test@example.com",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "password123",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signin",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signin"]
            }
          }
        },
        {
          "name": "로그아웃",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Club",
      "item": [
        {
          "name": "클럽 생성",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"테스트 클럽\",\n  \"description\": \"테스트용 클럽입니다\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/club",
              "host": ["{{baseUrl}}"],
              "path": ["club"]
            }
          }
        },
        {
          "name": "클럽 상세 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/club/{{clubId}}",
              "host": ["{{baseUrl}}"],
              "path": ["club", "{{clubId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Event",
      "item": [
        {
          "name": "이벤트 생성",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"정기 모임\",\n  \"description\": \"월간 정기 모임\",\n  \"club\": \"{{clubId}}\",\n  \"startDate\": \"2024-01-15T09:00:00Z\",\n  \"endDate\": \"2024-01-15T18:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "이벤트 상세 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Todo",
      "item": [
        {
          "name": "할일 목록 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/todos/club/{{clubId}}",
              "host": ["{{baseUrl}}"],
              "path": ["todos", "club", "{{clubId}}"]
            }
          }
        },
        {
          "name": "할일 생성",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "title",
                  "value": "테스트 할일",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "테스트용 할일입니다",
                  "type": "text"
                },
                {
                  "key": "club",
                  "value": "{{clubId}}",
                  "type": "text"
                },
                {
                  "key": "status",
                  "value": "todo",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/todos",
              "host": ["{{baseUrl}}"],
              "path": ["todos"]
            }
          }
        },
        {
          "name": "할일 상태 변경",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "status",
                  "value": "in_progress",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/todos/{{todoId}}/move",
              "host": ["{{baseUrl}}"],
              "path": ["todos", "{{todoId}}", "move"]
            }
          }
        }
      ]
    },
    {
      "name": "Vote",
      "item": [
        {
          "name": "투표하기",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "candidateIndex",
                  "value": "0",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/votes/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["votes", "{{eventId}}"]
            }
          }
        },
        {
          "name": "투표 결과 조회",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/votes/{{eventId}}/result",
              "host": ["{{baseUrl}}"],
              "path": ["votes", "{{eventId}}", "result"]
            }
          }
        }
      ]
    },
    {
      "name": "Availability",
      "item": [
        {
          "name": "가용성 등록",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"slots\": [\n    \"2024-01-15T09:00:00Z\",\n    \"2024-01-15T10:00:00Z\",\n    \"2024-01-15T14:00:00Z\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/availability/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["availability", "{{eventId}}"]
            }
          }
        }
      ]
    }
  ]
}
