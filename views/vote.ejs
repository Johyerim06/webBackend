<% layout('layout') -%>
<h2>후보 시간 투표 — <%= ev.title %></h2>
<% if((ev.candidates||[]).length===0){ %>
  <p>아직 후보가 없습니다.</p>
<% } else { %>
  <ul>
    <% ev.candidates.forEach((c, i)=> { %>
      <li>
        <%= new Date(c.start).toLocaleString() %> ~ <%= new Date(c.end).toLocaleString() %>
        <form method="post" action="/votes/<%= ev._id %>" style="display:inline">
          <input type="hidden" name="candidateIndex" value="<%= i %>" />
          <button type="submit">이 시간에 투표</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
